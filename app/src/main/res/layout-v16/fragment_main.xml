<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/holo_blue_jul"
    tools:context="com.example.nicolas.drapeaux.fragments.MainFragment"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <ImageView
        android:id="@+id/imageViewFlagRoller"
        android:layout_width="0dp"
        android:layout_height="128dp"
        android:contentDescription=""
        app:srcCompat="@mipmap/ic_launcher"
        tools:ignore="ContentDescription"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBottom_toTopOf="@+id/play" />

    <Button
        android:id="@+id/play"
        android:layout_width="200dp"
        android:layout_height="59dp"
        android:background="@android:color/holo_blue_light"
        android:textColor="@android:color/background_light"
        android:fontFamily="monospace"
        android:text="@string/play"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/imageViewFlagRoller"
        app:layout_constraintRight_toRightOf="@+id/imageViewFlagRoller"
        app:layout_constraintTop_toBottomOf="@+id/imageViewFlagRoller"
        tools:layout_editor_absoluteX="24dp" />

</android.support.constraint.ConstraintLayout>
