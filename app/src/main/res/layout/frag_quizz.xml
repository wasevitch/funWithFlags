<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="167dp"
        android:orientation="horizontal"
        android:weightSum="1"
        tools:ignore="UselessParent"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="0dp"
        tools:layout_conversion_absoluteWidth="368dp"
        tools:layout_conversion_absoluteHeight="167dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.046"
        android:id="@+id/linearLayout5">

        <ImageView
            android:id="@+id/imageViewFragmentButtons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription=""
            app:srcCompat="@mipmap/ic_launcher"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="258dp"
        android:orientation="vertical"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="167dp"
        tools:layout_conversion_absoluteWidth="368dp"
        tools:layout_conversion_absoluteHeight="258dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout6"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
        android:id="@+id/linearLayout7">

        <Button
            android:id="@+id/buttonPays1"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="@string/pays_1" />

        <Button
            android:id="@+id/buttonPays2"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:text="@string/pays_2" />

        <Button
            android:id="@+id/buttonPays3"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:text="@string/pays_3" />

        <Button
            android:id="@+id/buttonPays4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/pays_4" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="39dp"
        android:orientation="vertical"
        android:weightSum="1"
        tools:ignore="InefficientWeight"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="425dp"
        tools:layout_conversion_absoluteWidth="368dp"
        tools:layout_conversion_absoluteHeight="63dp"
        android:id="@+id/linearLayout6"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            tools:ignore="UnusedAttribute" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>