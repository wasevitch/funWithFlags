<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="183dp"
        android:orientation="horizontal"
        android:weightSum="1"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="379dp"
            android:layout_height="match_parent"
            android:contentDescription=""
            app:srcCompat="@mipmap/ic_launcher"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="258dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonPays1"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="@string/pays_1" />

        <Button
            android:id="@+id/buttonpays2"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:text="@string/pays_2" />

        <Button
            android:id="@+id/buttonpays3"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:text="@string/pays_3" />

        <Button
            android:id="@+id/buttonpays4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/pays_4" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.18"
        android:orientation="vertical"
        android:weightSum="1">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>