<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nicolas.drapeaux.fragments.QuizzImgFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/buttonCountryToFind"
        android:layout_width="282dp"
        android:layout_height="59dp"
        android:layout_marginTop="6dp"
        android:text="@string/buttoncountrytofind"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewImg4"
        android:layout_width="134dp"
        android:layout_height="126dp"
        android:layout_marginTop="208dp"
        android:adjustViewBounds="false"
        android:baselineAlignBottom="false"
        app:layout_constraintLeft_toRightOf="@+id/imageViewImg3"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/editbox_dropdown_light_frame"
        tools:ignore="ContentDescription"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageViewImg3"
        android:layout_width="134dp"
        android:layout_height="126dp"
        android:layout_marginTop="208dp"
        android:contentDescription=""
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/editbox_dropdown_light_frame"
        tools:layout_constraintTop_creator="1"
        tools:ignore="ContentDescription"
        app:layout_constraintRight_toLeftOf="@+id/imageViewImg4" />

    <ImageView
        android:id="@+id/imageViewImg1"
        android:layout_width="134dp"
        android:layout_height="126dp"
        app:srcCompat="@android:drawable/editbox_dropdown_light_frame"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="74dp"
        android:contentDescription=""
        tools:ignore="ContentDescription"
        app:layout_constraintRight_toLeftOf="@+id/imageViewImg2" />

    <ImageView
        android:id="@+id/imageViewImg2"
        android:layout_width="134dp"
        android:layout_height="126dp"
        android:layout_marginTop="74dp"
        android:adjustViewBounds="false"
        android:baselineAlignBottom="false"
        app:layout_constraintLeft_toRightOf="@+id/imageViewImg1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/editbox_dropdown_light_frame"
        tools:ignore="ContentDescription"
        app:layout_constraintRight_toRightOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</android.support.constraint.ConstraintLayout>
